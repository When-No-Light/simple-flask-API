
<HomeScreen>:

    FloatLayout:
        GridLayout:
            rows: 1
            pos_hint: {"top":1, "left":1}
            size_hint: 1, .1
            MDToolbar:
                title: 'Workers app'
                left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                elevation: 20
        GridLayout:
            cols:2
            pos_hint: {"top": .87, "bottom": .97, "left":1}
            size_hint: 1, 0.9
            spacing: '8dp'
            padding: '8dp'
            Button:
                text: "Для студента"
            Button:
                text: "Для рабочего"
            Button:
                text: "Форум"
            Button:
                text: "Документы"
    MDNavigationDrawer:
        id:nav_drawer
        BoxLayout:
            orientation: 'vertical'
            spacing: '8dp'
            padding: '8dp'
            MDLabel:
                text: 'User Name'
                font_style: 'Subtitle1'
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                MDList:
                    OneLineIconListItem
                        text: 'Домой'
                        on_press:
                            app.change_screen("logins")
                        IconLeftWidget:
                            icon: 'home'

                    OneLineIconListItem
                        text: 'Профиль'
                        IconLeftWidget:
                            icon: 'account'
                    OneLineIconListItem
                        text: 'Избранное'
                        IconLeftWidget:
                            icon: 'bookmark'
                    OneLineIconListItem
                        text: 'Информация'
                        IconLeftWidget:
                            icon: 'information'
                    OneLineIconListItem
                        text: 'Настройки'
                        IconLeftWidget:
                            icon: 'cog'